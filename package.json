{
  "name": "essential-helper",
  "version": "1.1.0",
  "description": "A collection of essential helper functions for JavaScript and TypeScript projects.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "release": "np"
  },
  "keywords": [
    "helper",
    "utility",
    "string",
    "encoding",
    "javascript",
    "typescript"
  ],
  "author": "Yukesh Dhakal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DhakalYukesh/essential-helper.git"
  },
  "bugs": {
    "url": "https://github.com/DhakalYukesh/essential-helper/issues"
  },
  "homepage": "https://github.com/DhakalYukesh/essential-helper#readme",
  "type": "commonjs",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.3",
    "np": "^10.2.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
